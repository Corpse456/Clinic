<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="add_patient_table" author="neznaev">
        <createTable tableName="patient">
            <column name="id" type="bigint(20)" autoIncrement="true">
                <constraints primaryKeyName="patient_pk"
                             primaryKey="true"/>
            </column>
            <column name="name" type="varchar(100)"/>
            <column name="last_name" type="varchar(100)"/>
            <column name="birth_date" type="date"/>
            <column name="gender" type="varchar(10)"/>

            <!--TODO add unique key (name, lastName)-->
        </createTable>
    </changeSet>

    <changeSet id="add_doctor_table" author="neznaev">
        <createTable tableName="doctor">
            <column name="id" type="bigint(20)" autoIncrement="true">
                <constraints primaryKeyName="doctor_pk"
                             primaryKey="true"/>
            </column>
            <column name="name" type="varchar(100)"/>
            <column name="last_name" type="varchar(100)"/>
            <column name="birth_date" type="date"/>
            <column name="specialty" type="varchar(50)"/>
            <column name="gender" type="varchar(10)"/>
            <!--TODO add unique key (name, lastName)-->
        </createTable>
    </changeSet>
</databaseChangeLog>
